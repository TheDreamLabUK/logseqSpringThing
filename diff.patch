+    debugEnabled = enabled;
+    logFullJson = fullJson;
+}
+
+export function createLogger(context: string): Logger {
+    const prefix = `[${context}]`;
+    
+    const formatArgs = (args: any[]): any[] => {
+        if (logFullJson) {
+            return args.map(arg => 
+                typeof arg === 'object' ? JSON.stringify(arg, null, 2) : arg
+            );
+        }
+        return args;
+    };
+    
