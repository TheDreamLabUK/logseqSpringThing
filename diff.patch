+        logger.debug(`Notifying ${this.observers.size} observers of settings change`);
+        this.observers.forEach((callback, id) => {
+            try {
+                callback(settings);
+            } catch (error) {
+                logger.error(`Error in settings observer ${id}:`, error);
+            }
+        });
+    }
+}
