+            success = false;
+            error_msg = Some(e);
+            break;
+        }
+    }
+
+    HttpResponse::Ok().json(CategorySettingsResponse {
+        category: "visualization".to_string(),
+        settings: update.settings.clone(),
+        success,
+        error: error_msg,
+    })
