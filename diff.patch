+        label="Frame Rate"
+        onChange={handleChange}
+      >
+        {FPS_OPTIONS.map((fps) => (
+          <MenuItem key={fps} value={fps}>
+            {fps} FPS
+          </MenuItem>
+        ))}
+      </Select>
+    </FormControl>
+  );
+};
