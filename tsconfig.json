{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./client/*"],
      "@components/*": ["./client/components/*"],
      "@types/*": ["./client/types/*"],
      "@stores/*": ["./client/stores/*"],
      "@composables/*": ["./client/composables/*"],
      "@platform/*": ["./client/platform/*"],
      "@visualization/*": ["./client/visualization/*"],
      "@xr/*": ["./client/xr/*"]
    },
    "types": ["node"],
    "allowJs": true
  },
  "include": [
    "client/**/*.ts",
    "client/**/*.d.ts",
    "client/**/*.tsx",
    "client/**/*.vue",
    "vite.config.ts"
  ],
  "exclude": ["node_modules"]
}
